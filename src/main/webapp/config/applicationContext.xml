	<!-- Resolves views selected for rendering by @Controllers to .jsp resources 
		in the /WEB-INF/views directory -->
	

	<!-- filter -->
	<context:component-scan base-package="com.psl.pluggin"
		use-default-filters="true" />
		
	
		
	<bean class="com.psl.pluggin.controller.UserController" id="UserControllerclass"/>
	<bean id="jsonProvider" 
		class="org.codehaus.jackson.jaxrs.JacksonJsonProvider"/>

		<jaxrs:server id="userController" address="/userController">
			<jaxrs:serviceBeans>
			<ref bean="UserControllerclass"/>
			</jaxrs:serviceBeans>
			<jaxrs:providers>
			<ref bean='jsonProvider' />
		</jaxrs:providers>
			
		</jaxrs:server>


